<h1>Submit a new post</h1>

<% [:info, :error].each do |key| %>
  <% if flash[key] %>
  <div class="<%= key %>" id="flash">
    <%= flash[key] %>
  </div>
  <% end %>
<% end %>


<%= form_for :post, :url => { :action => "create" } do |f| %>
<%= f.text_field :title %><br/>
<%= f.text_field :url %><br/>
<%= f.hidden_field :user, :value => current_user.id %>
or<br/>
<%= f.text_area :text, :size => "60x12" %><br/>
<%= submit_tag "Create" %>
<% end %>

